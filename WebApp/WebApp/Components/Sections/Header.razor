<header>
    <div class="container">
        <a id="logo" href="">
            <img id="logo-img" src="/images/silicon-logo-light-theme.svg" alt="Logotype for Silicon" />
        </a>

        <div id="menu">
            <nav>
                <NavLink href="" Match="NavLinkMatch.All" class="menu-link">Overview</NavLink>
                <NavLink href="/#features" class="menu-link">Features</NavLink>

                <AuthorizeView>
                    <Authorized>
                        <NavLink href="/courses" class="menu-link">Courses</NavLink>
                    </Authorized>
                </AuthorizeView>
            </nav>
        </div>

        <div id="theme-switch" class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>

        <div id="account-buttons">
            <AuthorizeView>
                <Authorized>
                    <a href="/account/details">
                        <img src="/images/uploads/profiles/avatar.jpg" alt="">
                    </a>
                </Authorized>
                <NotAuthorized>
                    <a class="btn-gray" href="/signin"><i class="fa-regular fa-right-to-bracket"></i><span>Sign In</span></a>
                    <a class="btn-theme" href="/signup"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <button id="btn-mobile" onclick="toggleMenu()">
            <i class="fa-regular fa-bars"></i>
        </button>
    </div>
</header>

